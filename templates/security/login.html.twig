{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <section class="section">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-half">
                    <h1 class="title is-4">Connexion</h1>

                    {% if error %}
                        <div class="notification is-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form method="post" action="{{ path('app_login') }}" class="box">
                        {# üîê CSRF token obligatoire #}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="field">
                            <label for="email" class="label">Email</label>
                            <div class="control">
                                <input type="email" id="email" name="email" class="input" value="{{ last_username }}" required autofocus>
                            </div>
                        </div>

                        <div class="field">
                            <label for="password" class="label">Mot de passe</label>
                            <div class="control">
                                <input type="password" id="password" name="password" class="input" required>
                            </div>
                        </div>

                        <div class="field">
                            <label class="checkbox">
                                <input type="checkbox" name="_remember_me">
                                Se souvenir de moi
                            </label>
                        </div>

                        <div class="field">
                            <p class="has-text-right">
                                <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
                            </p>
                        </div>

                        <div class="field">
                            <div class="control">
                                <button type="submit" class="button is-success is-fullwidth">Se connecter</button>
                            </div>
                        </div>
                    </form>

                    <p class="mt-4 has-text-centered">
                        Pas encore de compte ? <a href="{{ path('app_register') }}">S'inscrire</a>
                    </p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
