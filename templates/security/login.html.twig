{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <section class="section">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-half">
                    <form method="post" class="box">
                        {% if error %}
                            <div class="notification is-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        {% if app.user %}
                            <div class="notification is-info">
                                Vous êtes connecté en tant que {{ app.user.userIdentifier }},
                                <a href="{{ path('app_logout') }}">Déconnexion</a>
                            </div>
                        {% endif %}

                        <h1 class="title is-4">Veuillez vous connecter</h1>

                        <div class="field">
                            <label class="label" for="inputEmail">Email</label>
                            <div class="control">
                                <input class="input" type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
                            </div>
                        </div>

                        <div class="field">
                            <label class="label" for="inputPassword">Mot de passe</label>
                            <div class="control">
                                <input class="input" type="password" name="password" id="inputPassword" autocomplete="current-password" required>
                            </div>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="field">
                            <div class="control">
                                <label class="checkbox">
                                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                                </label>
                            </div>
                        </div>

                        <div class="field">
                            <div class="control">
                                <button class="button is-link is-fullwidth" type="submit">Se connecter</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}