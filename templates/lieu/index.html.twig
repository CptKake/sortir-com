{% extends 'base.html.twig' %}

{% block title %}Liste des lieux - {{ parent() }}{% endblock %}

{% block body %}
    <h1 class="title">Liste des lieux</h1>

    {# Filtre #}
    {{ form_start(form, {'method': 'get'}) }}
    <div class="field has-addons mb-5">
        <div class="control is-expanded">
            {{ form_widget(form.search) }}
        </div>
        <div class="control">
            <button class="button is-link" type="submit">
                <span class="icon"><i class="fas fa-search"></i></span>
            </button>
        </div>
        <div class="control">
            <a href="{{ path('app_lieu_index') }}" class="button is-light">
                <span class="icon"><i class="fas fa-times"></i></span>
            </a>
        </div>
    </div>
    {{ form_end(form) }}


    {% if is_granted('ROLE_USER') %}
    <div class="buttons mb-4">
        <a href="{{ path('app_lieu_new') }}" class="button is-success">
            <span class="icon"><i class="fas fa-plus"></i></span>
            <span>Ajouter un lieu</span>
        </a>
    </div>
    {% endif %}

    <div class="table-container">
        <table class="table is-fullwidth is-striped is-hoverable">
            <thead class="is-primary">
            <tr>
                <th>Nom</th>
                <th>Ville</th>
                <th>Code postal</th>
                <th>Rue</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for lieu in lieux %}
                <tr>
                    <td>{{ lieu.nom }}</td>
                    <td>{{ lieu.ville }}</td>
                    <td>{{ lieu.codePostal }}</td>
                    <td>{{ lieu.rue }}</td>

                    <td>
                        {% if is_granted('ROLE_USER') %}
                        <div class="buttons are-small">
                            <a href="{{ path('app_lieu_show', {'id': lieu.id}) }}" class="button is-info">
                                <span class="icon"><i class="fas fa-eye"></i></span>
                            </a>
                            <a href="{{ path('app_lieu_edit', {'id': lieu.id}) }}" class="button is-warning">
                                <span class="icon"><i class="fas fa-edit" ></i></span>
                            </a>
                            {% if is_granted('ROLE_ADMIN') %}
                            <form method="post" action="{{ path('app_lieu_delete', {'id': lieu.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce lieu ?');" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lieu.id) }}">
                                <button class="button is-danger">

                                    <span class="icon"><i class="fas fa-trash"></i></span>
                                </button>
                            </form>
                            {% endif %}
                        </div>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="has-text-centered">Aucun lieu trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

        {% if lieux.pageCount > 1 %}
            <nav class="pagination is-centered mt-5" role="navigation" aria-label="pagination">
                <ul class="pagination-list">
                    {% for page in 1..lieux.pageCount %}
                        <li>
                            <a class="pagination-link {{ page == lieux.currentPageNumber ? 'is-current' : '' }}"
                               href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'page': page})) }}">
                                {{ page }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        {% endif %}

{% endblock %}