{% extends 'base.html.twig' %}

{% block title %}Changer votre mot de passe{% endblock %}

{% block body %}
    <section class="section">
        <div class="container">
            <h1 class="title is-4">Changer votre mot de passe</h1>

            {{ form_start(resetForm, { 'attr': { 'class': 'box' } }) }}

            <div class="field">
                {{ form_label(resetForm.plainPassword.first, 'Nouveau mot de passe', { 'label_attr': { 'class': 'label' } }) }}
                <div class="control">
                    {{ form_widget(resetForm.plainPassword.first, { 'attr': { 'class': 'input' } }) }}
                </div>
                {{ form_errors(resetForm.plainPassword.first) }}
            </div>

            <div class="field">
                {{ form_label(resetForm.plainPassword.second, 'Répéter le mot de passe', { 'label_attr': { 'class': 'label' } }) }}
                <div class="control">
                    {{ form_widget(resetForm.plainPassword.second, { 'attr': { 'class': 'input' } }) }}
                </div>
                {{ form_errors(resetForm.plainPassword.second) }}
            </div>

            <div class="field">
                <div class="control">
                    <button class="button is-primary is-fullwidth">Changer le mot de passe</button>
                </div>
            </div>

            {{ form_end(resetForm) }}
        </div>
    </section>
{% endblock %}