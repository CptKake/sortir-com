{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Modifier mon profil</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.pseudo) }}
                {{ form_row(form.prenom) }}
                {{ form_row(form.nom) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.email) }}
                {{ form_row(form.telephone) }}
                {{ form_row(form.campus) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.photoFile) }}

                {% if participant.urlPhoto %}
                    <div class="mb-3">
                        <p>Photo actuelle :</p>
                        <img src="{{ asset('uploads/photos/' ~ participant.urlPhoto) }}"
                             alt="Photo de profil actuelle"
                             class="img-thumbnail"
                             style="max-width: 200px;">
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_profile_show') }}" class="btn btn-secondary">Annuler</a>
            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}