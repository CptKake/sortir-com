{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Changer mon mot de passe</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
        <div class="row">
            <div class="col-md-6 mx-auto">
                {{ form_row(form.oldPassword) }}
                {{ form_row(form.newPassword.first) }}
                {{ form_row(form.newPassword.second) }}

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_profile_show') }}" class="btn btn-secondary">Annuler</a>
                    <button type="submit" class="btn btn-primary">Changer le mot de passe</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}